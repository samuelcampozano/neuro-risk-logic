# Application Settings
APP_NAME="NeuroRiskLogic"
APP_VERSION="1.0.0"
ENV="development"
DEBUG=True
LOG_LEVEL="INFO"

# API Configuration
API_PREFIX="/api/v1"
HOST="0.0.0.0"
PORT=8000

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/neurorisk_db"
POSTGRES_USER="your_user"
POSTGRES_PASSWORD="your_password"
POSTGRES_DB="neurorisk_db"
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432

# Alternative SQLite for development
# DATABASE_URL="sqlite:///./data/neurorisk.db"

# Security
SECRET_KEY="your-secret-key-change-this-in-production"
API_KEY="your-api-key-for-admin-endpoints"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# Model Configuration
MODEL_VERSION="v1.0.0"
MIN_TRAINING_SAMPLES=100
RETRAIN_THRESHOLD_ACCURACY=0.75

# Feature Definitions Path
FEATURE_DEFINITIONS_PATH="data/feature_definitions.json"

# Synthetic Data Generation
SYNTHETIC_SAMPLES=1000
RANDOM_SEED=42

# Monitoring
ENABLE_METRICS=True
METRICS_ENDPOINT="/metrics"

# External Services (Optional)
SENTRY_DSN=""
SLACK_WEBHOOK_URL=""

# ML Tracking (Optional)
MLFLOW_TRACKING_URI=""
WANDB_API_KEY=""

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_BUCKET_NAME=""

# Email Notifications (Optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
NOTIFICATION_EMAIL=""