# NeuroRiskLogic Environment Configuration Template
# Copy this file to .env and update the values

# Application Settings
APP_NAME=NeuroRiskLogic
APP_VERSION=1.0.0
ENV=production
DEBUG=False
LOG_LEVEL=INFO

# API Configuration
HOST=0.0.0.0
PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://neurorisk_user:your_password_here@db:5432/neurorisk_db
POSTGRES_USER=neurorisk_user
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=neurorisk_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Security
SECRET_KEY=your-very-long-random-secret-key-change-this-in-production
API_KEY=your-api-key-for-admin-endpoints
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Model Configuration
MODEL_VERSION=v1.0.0
MIN_TRAINING_SAMPLES=50
RETRAIN_THRESHOLD_ACCURACY=0.75

# Incremental Learning
ENABLE_INCREMENTAL_LEARNING=True
INCREMENTAL_RETRAIN_INTERVAL=7
INCREMENTAL_CONFIDENCE_THRESHOLD=0.85

