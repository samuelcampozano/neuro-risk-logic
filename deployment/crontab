# Automated model retraining schedule
# Run every Monday at 3:00 AM
0 3 * * 1 cd /app && python scripts/automated_retraining.py --once >> /var/log/cron.log 2>&1

# Run data quality check every 6 hours
0 */6 * * * cd /app && python scripts/automated_retraining.py --check-only >> /var/log/cron.log 2>&1